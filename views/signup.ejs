<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/x-icon" href="/images/AppStellr-13.png">

</head>

<body>
    <div class="logo-container">
        
        <img src="/images/AppStellr-12.png" alt="Logo" class="logo" style="margin: auto;"> <!-- Logo -->
        
    </div>
    <h2>Signup</h2>
    <form action="/signup" method="POST" class="login-form">
        <input type="email" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Signup</button>
        <p>Already have an account? <a href="/login">Login</a></p>

    </form>
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div id="errorModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">&times;</span>
                <p><%= errorMessage %></p>
            </div>
        </div>
    <% } %>

    <script>
        function closeModal() {
            document.getElementById('errorModal').style.display = 'none';
        }

        // Automatically open the modal if there's an error
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            document.getElementById('errorModal').style.display = 'block';
        <% } %>
    </script>
</body>

</html>